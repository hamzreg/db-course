@using WineSales.Domain.Interactors

@inject IUserInteractor UserInteractor

<TableRow>
    <TableRowCell>@UserItem.Login</TableRowCell>
    <TableRowCell>@UserItem.Role</TableRowCell>
</TableRow>
<Bar Breakpoint="Breakpoint.Desktop"
     ThemeContrast="ThemeContrast.Light">
    <BarToggler />
    <BarMenu>
        <BarStart>
            <BarItem>
                <Button Color="Color.Danger" Clicked="@DeleteUser">Удалить аккаунт пользователя</Button>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>

@code {
    [Parameter] public User UserItem { get; set; }

    private Task DeleteUser()
    {
        UserInteractor.DeleteUser(UserItem);
        return Task.CompletedTask;
    }
}
