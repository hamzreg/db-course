<TableRow>
    <TableRowCell>@OneWine.Kind</TableRowCell>
    <TableRowCell>@OneWine.Color</TableRowCell>
    <TableRowCell>@OneWine.Volume</TableRowCell>
    <TableRowCell>@OneWine.Sugar</TableRowCell>
    <TableRowCell>@OneWine.Alcohol</TableRowCell>
    <TableRowCell>@OneWine.Aging</TableRowCell>

    @if (@incPercent)
    {
        <TableRowCell>@Percent</TableRowCell>
    }
    else if (@incPoint)
    {
        <TableRowCell>@Point</TableRowCell>
    }
    else if (@incPrice)
    {
        <TableRowCell>@Price</TableRowCell>
    }
</TableRow>

@code {
    [Parameter] public Wine OneWine { get; set; }
    [Parameter] public bool incPrice { get; set; }
    [Parameter] public double Price { get; set; }
    [Parameter] public bool incPercent { get; set; }
    [Parameter] public int Percent { get; set; }
    [Parameter] public bool incPoint { get; set; }
    [Parameter] public double Point { get; set; }
}
